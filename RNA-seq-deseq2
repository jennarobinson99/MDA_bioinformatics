#feature count 
#all .bam and .bai files (for both condtions) must be in same folder
#can be run on terminal 
nice R 
library(Rsubread)
fc_PEO_RNA <- featureCounts(files=list.files(pattern='.bam$'),annot.ext='/rds/general/project/diantonio/live/tools/genomes/hg38_ucsc/hg38.refGene.gtf',isGTFAnnotationFile=TRUE, nthread=32, GTF.featureType="exon", GTF.attrType="gene_id", useMetaFeatures=TRUE, isPairedEnd=T)
head(fc_PEO_RNA$counts)
write.table(x=data.frame(fc_PEO_RNA$counts,stringsAsFactors=FALSE), file="fc_PEO_RNA.txt",quote=FALSE,sep="\t",row.names=TRUE)


#run in Rstudio 
#install tools - only need to do once 
BiocManager::install("DESeq2")

# run deseq2
# make deseq2 dataset (dds)
library(DESeq2)
fc_PEO_RNA <- read.delim("fc_PEO_RNA.txt", header = TRUE, sep = "\t")
condition <- c("PEO1", "PEO1", "PEO1", "PEO4", "PEO4", "PEO4")
dds <- DESeqDataSetFromMatrix(countData=fc_PEO_RNA, colData=DataFrame(condition), design=~condition)
#gives details on how many rows and columns
dds

#remove rows that have <10 counts - this reduces memory size of dds and increases deseq speed
dds <- dds[rowSums(counts(dds))>=10,]

#conduct differential analysis
dds <- DESeq(dds)
res <- results(dds)
res

#get the name of the comparisons made aka coefficients
resultsNames(dds) 
 
#Shrink fold change - coef = name from above step 
res.shr <- lfcShrink(dds,coef="condition_PEO4_vs_PEO1")

#Remove rows with missing adj p value
resFix <- res.shr[!is.na(res.shr$padj),]

#Export data 
write.csv(as.data.frame(resFix), file="geneID_RNA_PEO1_v_PEO4.csv")
